{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "lib": ["es2015"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "outDir": "dist"
  },

  "include": ["src"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
